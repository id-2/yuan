{
  "name": "yuan",
  "version": "1.0.0",
  "private": true,
  "description": "Voice-to-Claude-Code Orchestrator",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev:bot": "npm run dev --workspace=@yuan/telegram-bot",
    "dev:orchestrator": "npm run dev --workspace=@yuan/orchestrator",
    "start:bot": "npm run start --workspace=@yuan/telegram-bot",
    "start:orchestrator": "npm run start --workspace=@yuan/orchestrator",
    "typecheck": "npm run typecheck --workspaces",
    "clean": "npm run clean --workspaces"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
