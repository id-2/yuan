# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OpenAI API Key (for Whisper transcription)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (for Claude Code)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GitHub Token (optional, for GitHub operations)
GITHUB_TOKEN=your_github_token_here

# Orchestrator Configuration
ORCHESTRATOR_HOST=localhost
ORCHESTRATOR_PORT=3000
ORCHESTRATOR_SECRET=your_shared_secret_here

# Optional: Working directory for Claude Code operations
WORKING_DIRECTORY=/path/to/your/projects

# Optional: Comma-separated list of allowed Telegram user IDs
# Leave empty to allow all users
ALLOWED_USER_IDS=123456789,987654321

# Bot Server Webhook URL (if bot runs separately from orchestrator)
# BOT_WEBHOOK_URL=https://your-server.com/webhook
